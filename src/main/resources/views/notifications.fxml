<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="notify" prefHeight="510.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NotificationController">
<VBox layoutX="11.0" layoutY="105.0" prefHeight="328.0" prefWidth="695.0" spacing="20.0">

    <HBox alignment="CENTER" spacing="3.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10;">
        <TextField fx:id="senderFilter" minHeight="-Infinity" minWidth="68.0" prefHeight="25.0" prefWidth="120.0" promptText="Sender name" />
        <TextField fx:id="receiverFilter" minWidth="120.0" prefHeight="25.0" prefWidth="120.0" promptText="Receiver name" />
        <ComboBox fx:id="typeFilter" prefHeight="25.0" prefWidth="75.0" promptText="Type" />
        <ComboBox fx:id="readStatusFilter" prefHeight="25.0" prefWidth="75.0" promptText="Status" />
        <DatePicker fx:id="dateFilter" minWidth="120.0" prefWidth="120.0" promptText="Sent date" />
        <Button minWidth="120.0" onAction="#applyFilters" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Apply Filters" />
        <Button onAction="#clearFilters" text="Clear" />
    </HBox>

    <TableView fx:id="notificationsTable" prefHeight="392.0" prefWidth="701.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 8;">
        <columns>
            <TableColumn fx:id="fromColumn" prefWidth="100" text="From" />
            <TableColumn fx:id="toColumn" prefWidth="100" text="To" />
            <TableColumn fx:id="messageColumn" prefWidth="300" text="Message" />
            <TableColumn fx:id="typeColumn" prefWidth="100" text="Type" />
            <TableColumn fx:id="readColumn" prefWidth="100" text="Status" />
            <TableColumn fx:id="sentAtColumn" prefWidth="150" text="Sent At" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10" />
</VBox>

 <Label layoutX="220.0" layoutY="30.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="📬 Notifications Center" />
  <Button fx:id="markReadBtn" layoutX="604.0" layoutY="466.0" onAction="#handleMarkAsRead" text="Mark as Read" />
  <Button fx:id="sendBtn" layoutX="489.0" layoutY="466.0" onAction="#goToSendNotification" text="Send Notification" />
    <Button fx:id="goBackBtn" layoutX="20.0" layoutY="466.0" onAction="#handleGoBack" text="← Go Back" />

</AnchorPane>
