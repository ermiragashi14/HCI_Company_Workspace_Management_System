        <VBox layoutX="199.0" layoutY="37.0" prefHeight="467.0" prefWidth="495.0" spacing="20" AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="199.0" AnchorPane.rightAnchor="6.0" AnchorPane.topAnchor="37.0">

