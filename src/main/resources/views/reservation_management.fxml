<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ReservationsManagementController">

    <top>
        <TitledPane text="🔍 Advanced Filters" expanded="true">
            <VBox spacing="10">
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <children>

                        <!-- Filter by User -->
                        <Label text="User:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="userFilterField" promptText="Search by user"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <!-- Filter by Workspace -->
                        <Label text="Workspace:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="workspaceFilterCombo" prefWidth="150"
                                  promptText="Select workspace"
                                  GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                        <!-- Filter by Status -->
                        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="statusFilterCombo" prefWidth="150"
                                  promptText="Select status"
                                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <!-- Filter by Reservation Date -->
                        <Label text="Date:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <DatePicker fx:id="dateFilterPicker"
                                    GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                        <!-- Filter by Modified By -->
                        <Label text="Modified By:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="modifiedByFilterField" promptText="Modifier name"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <!-- Filter by Modified At -->
                        <Label text="Modified Date:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                        <DatePicker fx:id="modifiedDateFilterPicker"
                                    GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    </children>
                </GridPane>


                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button text="🔍 Search" onAction="#onSearchClicked"/>
                    <Button text="↻ Reset" onAction="#onRefreshClicked"/>
                </HBox>
            </VBox>
        </TitledPane>

    </top>

    <center>
        <VBox spacing="10">
            <HBox spacing="20">
                <Label text="📅 All Reservations" style="-fx-font-weight: bold; -fx-font-size: 16"/>
                <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
                <Button text="🆕 New Reservation" onAction="#onNewReservationClicked"/>
            </HBox>

            <TableView fx:id="reservationTable">
                <columns>
                    <TableColumn fx:id="userColumn" text="👤 User"/>
                    <TableColumn fx:id="workspaceColumn" text="🏢 Workspace"/>
                    <TableColumn fx:id="dateColumn" text="📅 Date"/>
                    <TableColumn fx:id="statusColumn" text="✅ Status"/>
                    <TableColumn fx:id="scheduleColumn" text="🗓️ Schedule"/>
                    <TableColumn fx:id="modifiedByColumn" text="✍️ Modified By"/>
                    <TableColumn fx:id="modifiedAtColumn" text="📆 Modified At"/>
                    <TableColumn fx:id="actionColumn" text="⚙ Actions"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
