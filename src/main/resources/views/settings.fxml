<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="473.0" prefWidth="575.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SettingsController">
    <VBox layoutX="132.0" layoutY="50.0" prefHeight="371.0" prefWidth="311.0" spacing="10">

        <HBox alignment="CENTER_LEFT" spacing="20">
            <ImageView fx:id="profileImage" fitHeight="128" fitWidth="128" preserveRatio="false" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 2); -fx-border-radius: 4; -fx-background-radius: 4; -fx-border-color: lightgray;" />

            <VBox spacing="8">
                <Label text="Full Name:" />
                <Label fx:id="fullNameLabel" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                <Button onAction="#onChangePhoto" text="Change Photo" />
                <Button fx:id="removePhotoButton" onAction="#onRemovePhoto" text="Remove Photo" />
            </VBox>
        </HBox>

        <GridPane hgap="10" vgap="10">
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>

        <HBox spacing="10">
            <Button onAction="#updatePhone" text="Update Phone" />
            <Button fx:id="changePasswordButton" onAction="#changePassword" text="Change Password" />
        </HBox>

        <TitledPane expanded="true" text="Company Info">
            <GridPane hgap="10" vgap="10">
                <Label text="Company Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="companyNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Company Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="companyEmailLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
        </TitledPane>

        <Button fx:id="disableAccountButton" onAction="#disableAccount" style="-fx-text-fill: red;" text="Disable Account" />
      </VBox>

</AnchorPane>
