<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="252.0" prefWidth="557.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NewReservationController">
    <top>
        <VBox spacing="10">
            <HBox spacing="10" styleClass="dialogjet" stylesheets="@../css/style.css">
                <Label styleClass="labels" text="Date:" />
                <DatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="91.0" />
                <Label styleClass="labels" text="Start Time:" />
                <ComboBox fx:id="startTimeCombo" />
                <Label styleClass="labels" text="End Time:" />
                <ComboBox fx:id="endTimeCombo" />
                <Button onAction="#onCheckAvailabilityClicked" styleClass="butonat" text="Check Availability" />
            <VBox.margin>
               <Insets left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
            </HBox>
        </VBox>
    </top>
    <center>
        <ListView fx:id="availableWorkspacesList" prefHeight="200" prefWidth="558.0" styleClass="dialogjet" stylesheets="@../css/style.css" />
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="dialogjet" stylesheets="@../css/style.css">
            <Button onAction="#onReserveClicked" styleClass="butonat" text="Reserve" />
            <Button onAction="#onCancelClicked" styleClass="butonat" text="Cancel" />
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
