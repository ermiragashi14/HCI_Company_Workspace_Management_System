<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SendNotificationController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Send Notification" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextArea fx:id="messageField" promptText="Enter your message..." prefRowCount="4" wrapText="true" />

    <ComboBox fx:id="typeComboBox" promptText="Select notification type" />

    <HBox spacing="10">
        <RadioButton fx:id="sendToAllRadio" text="Send to All Users" selected="true"/>
        <RadioButton fx:id="sendToOneRadio" text="Send to Specific User"/>
    </HBox>

    <ComboBox fx:id="userComboBox" promptText="Select user" visible="false" />

    <Button text="Send Notification" onAction="#handleSendNotification"
            style="-fx-background-color: #2e8b57; -fx-text-fill: white;" />
</VBox>
