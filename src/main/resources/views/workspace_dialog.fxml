<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="250" prefWidth="300" spacing="10" style="-fx-padding: 15;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WorkspaceDialogController">


    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="nameLabel" text="Workspace Name:" />
        <TextField fx:id="nameField" promptText="Enter workspace name" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="capacityLabel" prefHeight="18.0" prefWidth="97.0" text="Capacity:" />
        <TextField fx:id="capacityField" prefHeight="26.0" prefWidth="145.0" promptText="Enter capacity" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="descriptionLabel" text="Description:" />
        <TextArea fx:id="descriptionArea" prefHeight="54.0" prefRowCount="2" prefWidth="183.0" promptText="Enter description..." />
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="cancelButton" text="Cancel" />
        <Button fx:id="saveButton" text="Save" />
    </HBox>

</VBox>
