<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox  prefHeight="29.0" prefWidth="700.0" styleClass="ribbon" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RibbonController">
   <Region HBox.hgrow="ALWAYS" />
   <children>
      <Button fx:id="goToSettings" mnemonicParsing="false" onAction="#goToSettings" prefHeight="35.0" styleClass="ribbon-button" stylesheets="@../css/style.css">
         <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/settings.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="goToNotifications" mnemonicParsing="false" onAction="#goToNotifications" prefHeight="35.0" styleClass="ribbon-button" stylesheets="@../css/style.css">
         <graphic>
            <ImageView fitHeight="22.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/notification.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="goToHelp" mnemonicParsing="false" onAction="#goToHelp" prefHeight="35.0" styleClass="ribbon-button" stylesheets="@../css/style.css">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/help.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ComboBox fx:id="languageSelector" maxWidth="20.0" prefHeight="26.0" visibleRowCount="3">
         <HBox.margin>
            <Insets />
         </HBox.margin></ComboBox>

      <Button fx:id="goToLogout" mnemonicParsing="false" onAction="#logout" prefHeight="35.0" styleClass="ribbon-button" stylesheets="@../css/style.css">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logout.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
