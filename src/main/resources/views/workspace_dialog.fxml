<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="250" prefWidth="314.0" spacing="10" style="-fx-padding: 15;" styleClass="dialogjet" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WorkspaceDialogController">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="nameLabel" styleClass="labels" text="Workspace Name:" />
        <TextField fx:id="nameField" prefHeight="26.0" prefWidth="152.0" promptText="Enter workspace name" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="capacityLabel" prefHeight="20.0" prefWidth="126.0" styleClass="labels" text="Capacity:" />
        <TextField fx:id="capacityField" prefHeight="26.0" prefWidth="145.0" promptText="Enter capacity" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="descriptionLabel" styleClass="labels" text="Description:" />
        <TextArea fx:id="descriptionArea" prefHeight="54.0" prefRowCount="2" prefWidth="191.0" promptText="Enter description..." />
    </HBox>
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="cancelButton" styleClass="butonat-dialog" text="Cancel" />
        <Button fx:id="saveButton" styleClass="butonat-dialog" text="Save" />
    </HBox>

</VBox>
