<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManageUsersController">

    <children>


        <VBox fx:id="ribbonContainer" prefHeight="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <fx:include source="ribbon.fxml" />
        </VBox>


        <VBox fx:id="navbarContainer" layoutX="0" layoutY="30.0" minHeight="480" prefWidth="200.0" />
        

            <HBox alignment="CENTER_LEFT" spacing="10" />

            <Label fx:id="filtersLabel" layoutX="355.0" layoutY="61.0" styleClass="labels" stylesheets="@../css/style.css" text="Apply filters:" />




                    <Label fx:id="nameFilterLabel" layoutX="225.0" layoutY="117.0" styleClass="labels" stylesheets="@../css/style.css" text="Name:" />
                    <TextField fx:id="nameFilterField" layoutX="276.0" layoutY="114.0" prefHeight="26.0" prefWidth="142.0" />



                    <Label fx:id="emailFilterLabel" layoutX="449.0" layoutY="117.0" styleClass="labels" stylesheets="@../css/style.css" text="Email:" />
                    <TextField fx:id="emailFilterField" layoutX="498.0" layoutY="114.0" prefHeight="26.0" prefWidth="170.0" />


                    <Label fx:id="statusFilterLabel" layoutX="397.0" layoutY="160.0" styleClass="labels" stylesheets="@../css/style.css" text="Status:" />
                    <ComboBox fx:id="statusFilterCombo" layoutX="464.0" layoutY="157.0" prefHeight="26.0" prefWidth="79.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="ALL" />
                                <String fx:value="ACTIVE" />
                                <String fx:value="DISABLED" />
                            </FXCollections>
                        </items>
                    </ComboBox>



                    <Label fx:id="roleFilterLabel" layoutX="230.0" layoutY="160.0" styleClass="labels" stylesheets="@../css/style.css" text="Role:" />
                    <ComboBox fx:id="roleFilterCombo" layoutX="280.0" layoutY="157.0" prefHeight="26.0" prefWidth="93.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="ALL" />
                                <String fx:value="SUPER_ADMIN" />
                                <String fx:value="ADMIN" />
                                <String fx:value="STAFF" />
                            </FXCollections>
                        </items>
                    </ComboBox>



                    <Label fx:id="createdAtFilterLabel" layoutX="223.0" layoutY="199.0" styleClass="labels" stylesheets="@../css/style.css" text="Created At (YYYY-MM-DD):" />
                    <TextField fx:id="createdAtField" layoutX="414.0" layoutY="194.0" prefWidth="130" />



            <HBox alignment="CENTER_RIGHT" spacing="10" />

            <TableView fx:id="userTable" layoutX="200.0" layoutY="240.0" prefHeight="260.0" prefWidth="497.0" styleClass="tabela" stylesheets="@../css/style.css">
                <columns>
                    <TableColumn fx:id="nameColumn" styleClass="titujt-tabela" text="Full Name" />
                    <TableColumn fx:id="emailColumn" prefWidth="92.60000610351562" styleClass="titujt-tabela" text="Email" />
                    <TableColumn fx:id="phoneColumn" prefWidth="63.199981689453125" styleClass="titujt-tabela" text="Phone" />
                    <TableColumn fx:id="roleColumn" prefWidth="52.0" styleClass="titujt-tabela" text="Role" />
                    <TableColumn fx:id="statusColumn" prefWidth="58.60003662109375" styleClass="titujt-tabela" text="Status" />
                    <TableColumn fx:id="createdAtColumn" prefWidth="75.60003662109375" styleClass="titujt-tabela" text="Created At" />
                    <TableColumn fx:id="actionColumn" prefWidth="78.199951171875" styleClass="titujt-tabela" text="Action" />
                </columns>
            </TableView>
             <Button fx:id="refreshButton" layoutX="574.0" layoutY="194.0" onAction="#onRefreshClicked" prefHeight="26.0" prefWidth="93.0" styleClass="butonat" stylesheets="@../css/style.css" text="↻ Reset" />
             <Button fx:id="searchButton" layoutX="574.0" layoutY="157.0" onAction="#onSearchClicked" prefHeight="26.0" prefWidth="93.0" styleClass="butonat" stylesheets="@../css/style.css" text="Search" />
             <Button fx:id="createUserButton" layoutX="230.0" layoutY="58.0" onAction="#onCreateUserClicked" styleClass="butonat" stylesheets="@../css/style.css" text="➕ Create User" />

        
    </children>
</AnchorPane>
